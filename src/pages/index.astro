---
const url = Astro.url;
const domainParam = url.searchParams.get('domain');
const currentHostname = url.hostname;
const defaultDomain = domainParam || currentHostname;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Wet Ocean's Contact Form - {defaultDomain} Purchase Inquiry</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				line-height: 1.6;
				color: #333;
				background: #f5f5f5;
				padding: 2rem;
			}
			
			.container {
				max-width: 600px;
				margin: 0 auto;
				background: white;
				padding: 2rem;
				border-radius: 8px;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			}
			
			h1 {
				color: #2c3e50;
				margin-bottom: 1.5rem;
				text-align: center;
			}
			
			.form-group {
				margin-bottom: 1.5rem;
			}
			
			label {
				display: block;
				margin-bottom: 0.5rem;
				font-weight: 600;
				color: #555;
			}
			
			input, textarea {
				width: 100%;
				padding: 0.75rem;
				border: 2px solid #e1e8ed;
				border-radius: 4px;
				font-size: 1rem;
				transition: border-color 0.3s;
			}
			
			input:focus, textarea:focus {
				outline: none;
				border-color: #3498db;
			}
			
			input[readonly] {
				background-color: #f8f9fa;
				color: #495057;
				cursor: not-allowed;
			}
			
			textarea {
				resize: vertical;
				min-height: 120px;
			}
			
			button {
				background: #3498db;
				color: white;
				padding: 1rem 2rem;
				border: none;
				border-radius: 4px;
				font-size: 1rem;
				font-weight: 600;
				cursor: pointer;
				transition: background 0.3s;
				width: 100%;
			}
			
			button:hover {
				background: #2980b9;
			}
			
			button:disabled {
				background: #bdc3c7;
				cursor: not-allowed;
			}
			
			.required {
				color: #e74c3c;
			}
			
			.success-message, .error-message {
				padding: 1rem;
				border-radius: 4px;
				margin-bottom: 1rem;
				font-weight: 600;
			}
			
			.success-message {
				background: #d4edda;
				color: #155724;
				border: 1px solid #c3e6cb;
			}
			
			.error-message {
				background: #f8d7da;
				color: #721c24;
				border: 1px solid #f5c6cb;
			}
			
			.loading {
				display: none;
			}
			
			.loading.show {
				display: inline-block;
				margin-left: 0.5rem;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<h1>Wet Ocean's Contact Form</h1>
			<h2 style="color: #555; margin-bottom: 2rem; text-align: center; font-weight: 400;">Purchase Inquiry for {defaultDomain}</h2>
			
			<div id="messages"></div>
			
			<form id="contactForm">
				<div class="form-group">
					<label for="domainName">Domain Name <span class="required">*</span></label>
					<input 
						type="text" 
						id="domainName" 
						name="domainName" 
						required 
						value={defaultDomain}
						placeholder="example.com"
						{domainParam ? 'readonly' : ''}
					/>
				</div>
				
				<div class="form-group">
					<label for="price">Offer Price (USD) <span class="required">*</span></label>
					<input 
						type="number" 
						id="price" 
						name="price" 
						required 
						min="1"
						step="0.01"
						placeholder="1000.00"
					/>
				</div>
				
				<div class="form-group">
					<label for="name">Your Name <span class="required">*</span></label>
					<input 
						type="text" 
						id="name" 
						name="name" 
						required 
						placeholder="John Doe"
					/>
				</div>
				
				<div class="form-group">
					<label for="email">Your Email <span class="required">*</span></label>
					<input 
						type="email" 
						id="email" 
						name="email" 
						required 
						placeholder="john@example.com"
					/>
				</div>
				
				<div class="form-group">
					<label for="note">Additional Notes</label>
					<textarea 
						id="note" 
						name="note" 
						placeholder="Please provide any additional details about your offer or requirements..."
					></textarea>
				</div>
				
				<button type="submit">
					Send Inquiry
					<span class="loading" id="loading">...</span>
				</button>
			</form>
		</div>

		<script>
			const form = document.getElementById('contactForm') as HTMLFormElement;
			const messagesDiv = document.getElementById('messages') as HTMLDivElement;
			const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
			const loading = document.getElementById('loading') as HTMLSpanElement;

			function showMessage(message: string, isError: boolean = false) {
				messagesDiv.innerHTML = `<div class="${isError ? 'error-message' : 'success-message'}">${message}</div>`;
				messagesDiv.scrollIntoView({ behavior: 'smooth' });
			}

			form.addEventListener('submit', async (e) => {
				e.preventDefault();
				
				submitButton.disabled = true;
				loading.classList.add('show');
				messagesDiv.innerHTML = '';

				const formData = new FormData(form);
				const data = Object.fromEntries(formData.entries());

				try {
					const response = await fetch('/api/contact', {
						method: 'POST',
						headers: {
							'Content-Type': 'application/json',
						},
						body: JSON.stringify(data),
					});

					const result = await response.json();

					if (response.ok) {
						showMessage('Thank you! Your inquiry has been sent successfully. I will get back to you soon.');
						form.reset();
					} else {
						throw new Error(result.error || 'Failed to send inquiry');
					}
				} catch (error) {
					showMessage(`Error: ${error instanceof Error ? error.message : 'Something went wrong'}`, true);
				} finally {
					submitButton.disabled = false;
					loading.classList.remove('show');
				}
			});
		</script>
	</body>
</html>
